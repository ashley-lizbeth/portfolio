---
import type { GetStaticPaths } from 'astro'
export const getStaticPaths = (() => {
	return [{ params: { lang: 'en' } }, { params: { lang: 'es' } }]
}) satisfies GetStaticPaths

import Layout from '../../layouts/Layout.astro'

import { getLangFromUrl, useTranslations } from '../../i18n/languagePicker'

const current_language = getLangFromUrl(Astro.url)
const t = useTranslations(current_language)
---

<style>
	#title > p {
		font-family: 'Salsa', cursive;
	}
</style>

<Layout title="Ashley Lizbeth">
	<div
		id="title"
		class="flex h-screen w-full flex-col items-end justify-center px-8 text-end text-[#996633]"
	>
		<h1 class="text-6xl">Ashley Lizbeth</h1>
		<p class="w-3/4">{t('home.title.tag')}</p>
	</div>
</Layout>

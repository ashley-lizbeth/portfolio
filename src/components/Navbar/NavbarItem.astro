---
import { getLangFromUrl } from '../../i18n/languagePicker'
interface Props {
	name: string
	href: string
}

const current_language = getLangFromUrl(Astro.url)

const { name, href } = Astro.props
---

<ul
	data-href={href}
	data-lang={current_language}
	class="navbar-link ml-5 flex items-center sm:ml-0"
>
	<a
		href=`${Astro.url}${href}`
		class="relative z-20 transition-all hover:text-rose-400 hover:underline"
		>{name}</a
	>
</ul>

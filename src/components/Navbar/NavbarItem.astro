---
import { getLangFromUrl } from '../../i18n/languagePicker'
interface Props {
	name: string
	href: string
}

const current_language = getLangFromUrl(Astro.url)

const { name, href } = Astro.props
---

<astro-navbar-item data-href={href} data-lang={current_language} class="navbar-link flex items-center ml-5 sm:ml-0">
	<a
		href=`${Astro.url}${href}`
		class="relative z-20 transition-all hover:text-rose-400 hover:underline"
		>{name}</a
	>
</astro-navbar-item>

<script>
	import feather from 'feather-icons'
	class AstroNavbarItem extends HTMLElement {
		constructor() {
			super()

			
		}
	}

	customElements.define('astro-navbar-item', AstroNavbarItem)
</script>

---
import feather from 'feather-icons'
import { getLangFromUrl, useTranslations } from '../../i18n/languagePicker'
import MusicDisk from '../MusicDisk.svelte'

const current_language = getLangFromUrl(Astro.url)
const t = useTranslations(current_language)
---

<style>
	h1,
	h2 {
		font-family: 'Salsa', cursive;
		font-weight: bold;
	}
	#about-me-body > p {
		margin-bottom: 1rem;
		text-align: justify;
	}
</style>

<section
	id="about-me"
	class="-mb-24 flex flex-col items-center justify-center pt-32"
>
	<div class="sm:mx-2 sm:w-5/6 lg:w-3/5">
		<div class="flex flex-col md:flex-row md:justify-between md:gap-4">
			<div class="mb-10 md:w-3/5" id="about-me-title">
				<div class="flex flex-col items-center justify-center">
					<h1
						class="text-center text-4xl sm:text-5xl md:text-4xl"
						set:html={t('about-me.welcome')}
					/>

					<p
						class="mt-2 text-center"
						set:html={t('about-me.tagline')}
					/>

					<div
						class="mt-4 flex w-2/3 gap-2 rounded-full border-2 border-rose-600 p-2"
					>
						<p
							class="flex w-1/2 items-center justify-center gap-2 rounded-full"
						>
							<span
								set:html={feather.icons.globe.toSvg({
									class: 'text-white',
								})}
							/> MÃ©xico
						</p>
						<p
							class="flex w-1/2 items-center justify-center gap-2 rounded-full"
						>
							<span
								set:html={feather.icons.gift.toSvg({
									class: 'text-white',
								})}
							/> 26/11
						</p>
					</div>

					<div class="flex h-full w-full justify-center p-10 pb-0">
						<MusicDisk client:only />
					</div>
				</div>
			</div>
			<div id="about-me-body" class="md:w-2/5">
				<h2 class="flex gap-2 text-2xl uppercase text-rose-400">
					{t('about-me.title')}
					<span
						class="flex items-center"
						set:html={feather.icons.book.toSvg({
							class: 'text-rose-400 inline',
						})}
					/>
				</h2>
				<p set:html={t('about-me.paragraph-1')} />
				<p set:html={t('about-me.paragraph-2')} />
				<p set:html={t('about-me.paragraph-3')} />
			</div>
		</div>
	</div>
</section>
